{
	"parser": "babel-eslint",
	"extends": ["eslint:recommended", "plugin:react/all","prettier"],
	"plugins":["react","prettier"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true,
			"ecmaVersion":6,
			"experimentalObjectRestSpread":true
		}
	 },
	 "globals": {
		 "require":true,
		 "__dirname":true,
		 "module":true,
		 "Promise":true,
		 "console":true
	 },
	"rules": {
		"prettier/prettier":["error",{
			"tabWidth":4,
			"useTabs":true,
			"semi":false
		}]
	}
}